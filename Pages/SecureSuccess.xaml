<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetsApp.Pages.SecureSuccess"
             Title="SecureSuccess"
             Shell.NavBarIsVisible="False">
    
    <Grid RowDefinitions="*,*,*,Auto">
        <VerticalStackLayout Grid.Row="1" Spacing="20" HorizontalOptions="Center">
            <Frame WidthRequest="100" HeightRequest="100" CornerRadius="50" Padding="0" HasShadow="False" BackgroundColor="Transparent">
                <Image Source="security.png" Aspect="AspectFit"></Image>
            </Frame>


            <Label 
            FontAttributes="Bold"
            FontSize="24"
            Text="You're All Set !"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            TextColor="LightGray"
             Text="Your password has been successfully changed"
             VerticalOptions="Center" 
             HorizontalOptions="Center" />
        </VerticalStackLayout>
        
        <VerticalStackLayout Grid.Row="3" Padding="20">
            <Button Clicked="GotoHome" Text="Go to home" BackgroundColor="Orange" CornerRadius="30"/>
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>