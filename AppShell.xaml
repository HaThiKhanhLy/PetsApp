<Shell
    x:Class="PetsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Pages="clr-namespace:PetsApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="PetsApp">
    <ShellContent
     Title="Splash2"
     ContentTemplate="{DataTemplate Pages:Splash2}"
     Route="Splash2"
     />
    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate Pages:Home}" Route="Home" Icon="home.png" />
        <ShellContent Title="Pets" ContentTemplate="{DataTemplate Pages:Pets}" Route="Pets" Icon="hearticon.png" />
        <ShellContent Title="Orders" ContentTemplate="{DataTemplate Pages:Orders}" Route="Orders" Icon="listorder.png" />
        <ShellContent Title="Profile" ContentTemplate="{DataTemplate Pages:Profile}" Route="Profile" Icon="user.png" />
    </TabBar>

</Shell>